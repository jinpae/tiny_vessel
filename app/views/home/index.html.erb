<main role="main" id="hero">
	<div class="container">
		<div class="logo">
			<%= render 'layouts/logo' %>
		</div>
	
		<div class="lead-wrap">
			<p class="curly-braces right-curly-brace">&#123;</p>
			<p class="lead">
				<strong>Tiny Vessel</strong> is a community forum for web developers and designers.<br>
				Ask questions, get help, and discuss what matters to you.
			</p>
			<p class="curly-braces left-curly-brace">&#125;</p>
		</div>
	
		<div class="cta-btn-group">
			<%= link_to 'Join Now', new_user_registration_path, class: 'btn btn-lg' %><%= link_to 'Sign In', new_user_session_path, class: 'btn btn-lg' %>
		</div>
	</div>
</main>

<section id="latest-posts" class="page-wrap">
	<div class="container">
		<h1 class="section-title">
			<i class="fa fa-code"></i> Recent Discussions
		</h1>

		<%= render @latest_posts %>
	</div>
</section>
