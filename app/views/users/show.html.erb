<% set_title 'User Profile' %>

<section class="page-wrap">
	<div class="container">
		<div class="profile">
			<%= profile_image_for @user %>
			<p class="name"><%= @user.identity %></p>
			<p class="email text-muted"><%= @user.email %></p>
			<%= bio_for @user %>
			<%= social_links_for @user %>
		</div>

		<div class="recent-posts">
			<h2 class="recent-posts-title">Recent Posts</h2>

			<% if @recent_posts.any? %>
				<%= render @recent_posts %>
			<% else %>
				<p>No posts found for <%= @user.identity %>...</p>
			<% end %>
		</div>
	</div>
</section>
