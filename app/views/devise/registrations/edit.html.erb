<% set_title 'Account Settings' %>

<section class="page-wrap">
	<div class="container">
		<div id="account-settings-page">
			<h1>Account Settings</h1>

			<div class="avatar-wrap">
					<%= profile_image_for current_user %>
					<p>Avatar managed via <%= link_to 'Gravatar', 'http://gravatar.com', target: '_blank' %>.</p>
			</div>
			
			<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
			  <%= devise_error_messages! %>
			
			  <div class="field">
			    <%= f.label :name %><br />
			    <%= f.text_field :name, autofocus: true %>
			  </div>
			
			  <div class="field">
			    <%= f.label :username %><br />
			    <%= f.text_field :username %>
			  </div>
			
			  <div class="field">
			    <%= f.label :email %><br />
			    <%= f.email_field :email %>
			  </div>
			
			  <div class="field spacer">
			    <%= f.label :bio %><br />
			    <%= f.text_area :bio, rows: 5 %>
			  </div>

				<div class="spacer">
					<div class="inner-form-wrap">
						<div class="field">
			  		  <%= f.label :website_url, 'Website URL' %><br />
			  		  <%= f.text_field :website_url %>
			  		</div>

						<div class="field col-1-3">
			  		  <%= f.label :twitter_id, 'Twitter username' %><br />
			  		  <%= f.text_field :twitter_id %>
			  		</div><div class="field col-1-3">
			  		  <%= f.label :github_id, 'GitHub username'%><br />
			  		  <%= f.text_field :github_id %>
						</div><div class="field col-1-3">
			  		  <%= f.label :linkedin_id, 'LinkedIn username' %><br />
			  		  <%= f.text_field :linkedin_id %>
			  		</div>
					</div>
				</div>
			
			  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
			    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
			  <% end %>
			
			  <div class="field">
			    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
			    <%= f.password_field :password, autocomplete: "off" %>
			  </div>
			
			  <div class="field spacer">
			    <%= f.label :password_confirmation %><br />
			    <%= f.password_field :password_confirmation, autocomplete: "off" %>
			  </div>
			
			  <div class="field inner-form-wrap">
			    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
			    <%= f.password_field :current_password, autocomplete: "off" %>
			  </div>
			
			  <%= f.submit "Update", class: 'btn btn-md btn-submit' %>
				<%= link_to "Cancel", forum_posts_path, class: 'text-muted cancel-link' %>
			<% end %>

		</div>
	</div>
</section>
