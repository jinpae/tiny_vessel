<%= render('shared/errors', object: @forum_reply) unless @forum_reply.new_record? %>

<div class="reply-form">
	<div class="avatar-wrap">
		<%= profile_image_for current_user, 'avatar' %>
	</div>

	<%= form_for [@forum_post, @forum_reply] do |f| %>
		<%= render('shared/errors', object: @forum_reply) if @forum_reply.new_record? %>

		<%= f.text_area :body, rows: 8, placeholder: 'Add a reply' %>

		<% if @forum_reply.new_record? %>
			<%= f.submit 'Submit Reply', class: 'btn btn-md' %>
		<% else %>
				<%= f.submit 'Update', class: 'btn btn-md' %>
				<%= link_to 'Cancel', @forum_post, class: 'text-muted cancel-link' %>
		<% end %>

		<%= link_to 'Parsed with Markdown', 'https://guides.github.com/features/mastering-markdown/', target: '_blank', class: 'float-right text-muted markdown-link' %>
	<% end %>
</div>
