<%= render 'shared/errors', object: @forum_post %>

<div class="post-form">
	<div class="avatar-wrap">
		<%= profile_image_for current_user, 'avatar' %>
	</div>

	<%= form_for @forum_post do |f| %>
		<%= f.text_field :title, placeholder: 'Title', autofocus: true %>
		<%= f.collection_select :category_id, Category.all, :id, :name, prompt: 'Please Select a Category' %>
		<%= f.text_area :body, placeholder: 'Body', rows: 10 %>
	
		<% if @forum_post.new_record? %>
			<%= f.submit 'Submit', class: 'btn btn-md' %>
		<% else %>
			<%= f.submit 'Update', class: 'btn btn-md' %>
		<% end %>
	
		<%= link_to 'Cancel', @forum_post.new_record? ? forum_posts_path : @forum_post, class: 'text-muted cancel-link' %>
		<%= link_to 'Parsed with Markdown', 'https://guides.github.com/features/mastering-markdown/', target: '_blank', class: 'float-right text-muted markdown-link' %>
	<% end %>
</div>
