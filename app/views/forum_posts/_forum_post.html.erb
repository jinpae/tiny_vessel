<div class="post-wrap">
	<div class="avatar-wrap">
		<%= profile_image_for forum_post.user, 'avatar' %>
	</div>

	<div class="post-content">
		<h2 class="forum-post-title">
			<%= link_to forum_post.title, forum_post %>
		</h2>

		<p class="post-description">
		Posted by <strong><%= link_to get_author(forum_post), forum_post.user, class: 'author' %></strong> <%= time_ago_in_words forum_post.created_at %> ago // <span class="category-tag <%= forum_post.category.name.downcase %>"><%= forum_post.category.name %></span>
		</p>
	</div>

	<div class="post-reply-count">
		<p class="reply-count">
			<%= forum_post.forum_replies.count %><br>
			<%= pluralize_without_count(forum_post.forum_replies.count, 'reply').capitalize %>
		</p>
	</div>
</div>
