<% if object.errors.any? %>
	<div id="error_explanation">
		<h2><%= pluralize object.errors.count, 'error' %> occurred while saving this <%= object.model_name.human.downcase %>:</h2>
		<ul>
			<% object.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
	</div>
<% end %>
