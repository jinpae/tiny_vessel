<!DOCTYPE html>
<html>
<head>
	<title><%= content_for?(:title) ? yield(:title) : 'A Community Forum for Web Developers and Designers | Tiny Vessel' %></title>
  <%= stylesheet_link_tag    'application', 'https://fonts.googleapis.com/css?family=Questrial', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
	<%= tag :meta, name: 'viewport', content: 'width=device-width, initial-scale=1' %>
	<%= favicon_link_tag 'favicon.ico' %>
</head>
<body>

	<% unless current_page?(root_path) %>
		<%= render 'layouts/header' %>
	<% end %>

	<%= render 'shared/flash' %>

	<%= yield %>

	<%= render 'layouts/footer' %>

</body>
</html>
